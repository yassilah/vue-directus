{
  "name": "vue-directus",
  "version": "0.0.0-development",
  "description": "A library starter template.",
  "license": "MIT",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yassilah/vue-directus"
  },
  "scripts": {
    "prepack": "unbuild",
    "dev": "vitepress dev",
    "build": "vitepress build",
    "serve": "vitepress serve",
    "test": "vitest",
    "coverage": "vitest run --coverage",
    "commit": "cz",
    "commit:all": "git add . && cz",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@apenhet/eslint-config": "latest",
    "@vue/test-utils": "^2.0.0-rc.18",
    "c8": "^7.11.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "latest",
    "happy-dom": "^2.31.1",
    "semantic-release": "^19.0.2",
    "unbuild": "latest",
    "vitepress": "^0.21.6",
    "vitest": "latest",
    "vue": "^3.2.29"
  },
  "peerDependencies": {
    "vue": "^3.2.29"
  },
  "eslintConfig": {
    "extends": "@apenhet",
    "ignorePatterns": [
      "!.vitepress"
    ]
  },
  "unbuild": {
    "declaration": true,
    "entries": [
      "./src/index"
    ],
    "rollup": {
      "emitCJS": true
    }
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "release": {
    "branches": [
      "main",
      "master",
      {
        "name": "next",
        "prerelease": true
      }
    ]
  },
  "dependencies": {
    "@directus/sdk": "^9.5.1",
    "defu": "^5.0.1"
  }
}
